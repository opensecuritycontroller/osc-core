	<profiles>
		<profile>
			<id>all</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<phase>prepare-package</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<!-- copy bundled plugins for bundled profile "all". -->
										<copy tofile="${basedir}/mgr_plugins/SmcMgrPlugin.bar"
											file="${basedir}/../../security-mgr-smc-plugin/target/SmcMgrPlugin.bar" />
										<copy tofile="${basedir}/mgr_plugins/NsmMgrPlugin.bar"
											file="${basedir}/../../security-mgr-nsm-plugin/target/NsmMgrPlugin.bar" />
										<copy tofile="${basedir}/mgr_plugins/SampleMgrPlugin.bar"
											file="${basedir}/../../security-mgr-sample-plugin/target/SampleMgrPlugin.bar" />
										<copy tofile="${basedir}/sdn_ctrl_plugins/NscSdnControllerPlugin.bar"
											file="${basedir}/../../sdn-controller-nsc-plugin/target/NscSdnControllerPlugin.bar" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>java-jre-get</id>
			<activation>
				<file>
					<missing>${basedir}/../osc-server-bom/Sources/jre-8u112-linux-x64.tar.gz</missing>
				</file>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>download-files</id>
								<phase>prepare-package</phase>
								<configuration>
									<tasks>
										<exec executable="wget">
											<arg
												line="--no-check-certificate --no-cookies --header &quot;Cookie: oraclelicense=accept-securebackup-cookie&quot; http://download.oracle.com/otn-pub/java/jdk/8u131-b11/d54c1d3a095b4ff2b6607d096fa80163/jre-8u131-linux-x64.tar.gz -P &quot;${basedir}/../osc-server-bom/Sources&quot; -nv" />
										</exec>
									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-indexer-maven-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<localURLs>REQUIRED</localURLs>
				</configuration>
				<executions>
					<execution>
						<id>default-index</id>
						<goals>
							<goal>index</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-export-maven-plugin</artifactId>
				<version>3.3.0</version>
				<configuration>
					<bndruns>
						<bndrun>server.bndrun</bndrun>
					</bndruns>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>export</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${basedir}</directory>
							<includes>
								<include>mgr_plugins/**</include>
								<include>sdn_ctrl_plugins/**</include>
								<include>generated/**</include>
								<include>webapp/**</include>
							</includes>
						</fileset>

						<fileset>
							<directory>${basedir}/../osc-server-bom/root/opt/vmidc/bin</directory>
							<excludes>
								<exclude>mgr_plugins</exclude>
								<exclude>sdn_ctrl_plugins</exclude>
								<exclude>log4j.properties</exclude>
								<exclude>ESAPI.properties</exclude>
								<exclude>quartz.properties</exclude>
								<exclude>vmidcServer.conf</exclude>
								<exclude>vmidc.sh</exclude>
								<exclude>vmidcShell.py</exclude>
								<exclude>scripts/**</exclude>
							</excludes>
							<includes>
								<include>sdn_ctrl_plugins/**</include>
								<include>mgr_plugins/**</include>
								<inclede>jar/**</inclede>
								<inclede>osc-server.jar</inclede>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>local distribution</id>
						<phase>package</phase>
						<configuration>
							<target>
								<!-- webapp -->
								<copy todir="${basedir}/webapp">
									<fileset dir="${basedir}/../osc-server/src/main/webapp"
										excludes="VAADIN/gwt-unitCache/**" />
									<fileset dir="${basedir}/../osc-server/target/webapp"
										includes="api-doc/**" />
								</copy>
								<unzip dest="${basedir}/webapp/WebHelp" src="${basedir}/../osc-server/techdoc/WebHelp.zip" />

								<copy todir="${basedir}/webapp/SDK">
									<fileset
										dir="${user.home}/.m2/repository/org/osc/api/sdn-controller-api/1.0.0">
										<include name="**/*-sources.jar" />
									</fileset>
									<fileset
										dir="${user.home}/.m2/repository/org/osc/api/security-mgr-api/1.0.0">
										<include name="**/*-sources.jar" />
									</fileset>
								</copy>

								<!-- serverBOM -->
								<unjar dest="${basedir}/../osc-server-bom/root/opt/vmidc/bin"
									src="${basedir}/target/server.jar">
									<patternset>
										<exclude name="start" />
										<exclude name="start.bat" />
									</patternset>
								</unjar>
								<copy todir="${basedir}/../osc-server-bom/root/opt/vmidc/bin">
									<fileset dir="${basedir}">
										<include name="vmidcKeyStore.jks" />
										<include name="config/**" />
										<include name="mgr_plugins/**" />
										<include name="sdn_ctrl_plugins/**" />
										<include name="webapp/**" />
									</fileset>
									<fileset dir="${basedir}/../osc-control/target"
										includes="osc-control.jar" />
								</copy>

								<!-- create serverUpgradeBundle.zip -->
								<zip destfile="${basedir}/../target/serverUpgradeBundle.zip">
									<fileset dir="${basedir}/../osc-server-bom/root">
										<include name="opt/vmidc/bin/**" />
										<exclude name="opt/vmidc/bin/libts-jni.so" />
										<exclude name="opt/vmidc/bin/quartz.properties" />
										<exclude name="opt/vmidc/bin/vmidcServer.conf" />
										<exclude name="opt/vmidc/bin/vmidcKeyStore.jks" />
										<exclude name="opt/vmidc/bin/*.iml" />
										<exclude name="opt/vmidc/bin/*.bnd" />
										<exclude name="opt/vmidc/bin/*.backup" />
										<exclude name="opt/vmidc/bin/mainKeyStore.p12" />
										<exclude name="opt/vmidc/bin/vmidctruststore.jks" />
										<exclude name="opt/vmidc/bin/server.pid" />
										<exclude name="opt/vmidc/bin/vmiDCDB.*" />
									</fileset>
									<zipfileset dir="${basedir}/../osc-control/target"
										includes="osc-control-upgrade.jar" fullpath="opt/vmidc/bin/osc-server.jar" />
									<fileset dir="${basedir}/../osc-server-bom/Sources">
										<include name="jre-8u131-linux-x64.tar.gz" />
									</fileset>
								</zip>

							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
